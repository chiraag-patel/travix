<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
      http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <mapping>
        <class-a>com.travix.medusa.busyflights.domain.entity.ToughJet</class-a>
        <class-b>com.travix.medusa.busyflights.domain.dto.ToughJetDTO</class-b>
        <field>
            <a>flight.airline</a>
            <b>carrier</b>
        </field>
        <field>
            <a>flight.origin</a>
            <b>departureAirportName</b>
        </field>
        <field>
            <a>flight.destination</a>
            <b>arrivalAirportName</b>
        </field>
        <field>
            <a>flight.departureDate</a>
            <b>outboundDateTime</b>
        </field>
        <field>
            <a>flight.returnDate</a>
            <b>inboundDateTime</b>
        </field>
    </mapping>
</mappings>